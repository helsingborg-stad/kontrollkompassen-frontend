{
    "name": "helsingborg-stad/styleguide",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Helsingborg stad",
            "email": "webbutveckling@helsingborg.se"
        }
    ],
    "scripts": {
        "test": "./vendor/bin/phpunit --testdox tests"
    },
    "minimum-stability": "stable",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.org"
        },
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": "^8.2",
        "helsingborg-stad/component-library": "~4.0.22",
        "predis/predis": "~2.2.2",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "php-di/slim-bridge": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "KoKoP\\": "source/php/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11"
    }
}